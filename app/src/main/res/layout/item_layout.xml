<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/primary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    app:cardCornerRadius="6dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

         >


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:background="#655f5f"
            android:elevation="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/_id"
            android:textSize="25sp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/tarefa"
            android:layout_toRightOf="@+id/descricao"
            android:layout_alignRight="@+id/tarefa"
            android:layout_alignEnd="@+id/tarefa"
            android:textColor="?attr/colorAccent"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tarefa"
            android:id="@+id/tarefa"
            android:textSize="25sp"

            android:layout_toLeftOf="@+id/start"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:textColor="?attr/colorAccent"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Descrição"
            android:id="@+id/descricao"
            android:textSize="25sp"

            android:layout_above="@+id/lblPomodoro"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignRight="@+id/start"
            android:layout_alignEnd="@+id/start"
            android:textColor="?attr/colorAccent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/lblPomodoro"
            android:textSize="25sp"
            android:hint="Nr Pomodoro"

            android:layout_alignBottom="@+id/imageView"
            android:layout_toLeftOf="@+id/stop"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:textColor="?attr/colorAccent"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar"
            android:id="@+id/start"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/stop"
            android:layout_alignStart="@+id/stop"
            android:layout_alignRight="@+id/stop"
            android:layout_alignEnd="@+id/stop"
            android:textColor="#bbdefb"
            android:background="@drawable/mybutton"
            android:elevation="20dp"
            />


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concluído"
            android:id="@+id/stop"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#bbdefb"
            android:background="@drawable/mybutton"
            android:elevation="20dp"
            android:layout_below="@+id/descricao" />


    </RelativeLayout>


</android.support.v7.widget.CardView>