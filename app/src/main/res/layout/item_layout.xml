<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:elevation="4dp"

    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:elevation="10dp" />


        <TextView
            android:id="@+id/_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tarefa"

            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tarefa"
            android:layout_alignTop="@+id/tarefa"
            android:layout_toRightOf="@+id/descricao"
            android:textSize="25sp"

            />


        <TextView
            android:id="@+id/tarefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"

            android:layout_toLeftOf="@+id/start"
            android:layout_toRightOf="@+id/imageView"
            android:hint="Tarefa"
            android:textSize="25sp"

            />


        <TextView
            android:id="@+id/descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lblPomodoro"
            android:layout_alignEnd="@+id/start"

            android:layout_alignRight="@+id/start"
            android:layout_toRightOf="@+id/imageView"
            android:hint="Descrição"
            android:textSize="25sp"


            />

        <TextView
            android:id="@+id/lblPomodoro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toLeftOf="@+id/stop"
            android:layout_toRightOf="@+id/imageView"
            android:hint="Nr Pomodoro"
            android:textSize="25sp"


            />

        <Button
            android:id="@+id/start"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/stop"


            android:layout_alignLeft="@+id/stop"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/stop"
            android:layout_alignStart="@+id/stop"
            android:background="@drawable/mybutton"
            android:elevation="20dp"
            android:text="@string/start_task"
            android:textColor="#FFF"
            android:textColorHighlight="#FFF"
             />


        <Button
            android:id="@+id/stop"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_below="@+id/descricao"
            android:background="@drawable/mybutton"
            android:elevation="20dp"
            android:text="@string/stop_task"
            android:textColor="#FFF"
            android:textColorHighlight="#FFF"
             />


    </RelativeLayout>


</android.support.v7.widget.CardView>